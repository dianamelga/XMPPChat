<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.AppBarOverlay"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_chat_contact"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <!--include layout="@layout/actionbar_toolbar"/-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_contact_toolbar"
                android:layout_width="@dimen/width_image_contact_toolbar"
                android:layout_height="@dimen/height_image_contact_toolbar"
                android:src="@drawable/samsung_galaxy_s4_contacts"
                android:layout_marginLeft="@dimen/padding_left_img_contact_toolbar"
                android:layout_marginTop="@dimen/margin_top_img_contact_toolbar"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:id="@+id/name_contact_toolbar"
                android:layout_width="@dimen/width_name_contact_toolbar"
                android:layout_height="@dimen/height_name_contact_toolbar"
                android:text="@string/text_name_contact_toolbar"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.AppBarLayout>